<?php

namespace App\Controllers;


use CodeIgniter\HTTP\ResponseInterface;
use CodeIgniter\RESTful\ResourceController;

class namectrl extends ResourceController
{
    protected $modelbos = 'App\Models\nama model';
    protected $format = 'json';

    public function __construct()
    {
        $this->modelName = new $this->modelbos();
    }

    /**
     * Menampilkan semua data 
     *
     * @return ResponseInterface
     */
    public function index()
    {
        $model = new $this->modelName();
    return $this->response->setJSON($model->findAll());

    }

    /**
     * Menampilkan data berdasarkan ID.
     *
     * @param int|string|null $id
     * @return ResponseInterface
     */
    public function show($id = null)
    {
    $model = new $this->modelName();
    $user = $model->find($id);

    if ($user) {
        return $this->response->setJSON($user);
    }

    return $this->response->setJSON(['error' => 'Data not found'], 404);
    }


    /**
     * Menambah data baru.
     *
     * @return ResponseInterface
     */
    public function create()
    {
    $data = $this->request->getJSON();
    $model = new $this->modelName();
    $model->insert($data);
    return $this->response->setJSON(['status' => 'Data added successfully']);
    }


    /**
     * Mengubah data berdasarkan ID.
     *
     * @param int|string|null $id
     * @return ResponseInterface
     */
    public function update($id = null)
    {
        $data = $this->request->getJSON();
        $model = new $this->modelName();
        $model->update($id, $data);
        return $this->response->setJSON(['status' => 'Data updated successfully']);
    }
    

    /**
     * Menghapus data berdasarkan ID.
     *
     * @param int|string|null $id
     * @return ResponseInterface
     */
    public function delete($id = null)
    {
        $model = new $this->modelName();
        if (!$this->model->find($id)) {
            return $this->failNotFound('Data tidak ditemukan');
        }
        $this->model->delete($id);
        return $this->response->setJSON(['status' => 'Data deleted successfully']);
    }
}
